<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ahad.sensor" >
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_sensor"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_sensor"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sensor"
        tools:targetApi="31" >
        <activity
            android:name=".view.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".service.MySensorService" android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>